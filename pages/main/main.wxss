/* pages/main.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-left: 70rpx;
  margin-top: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  align-items: center;
  border-radius: 50%;
  position: absolute;
}

.userinfo-welcome {
  color: #aaa;
  margin-left: 168rpx;
  margin-top: 12rpx;  
}

.userinfo-nickname {
  color: rgb(53, 53, 53);
  font-weight: 900;
  font-size: large;
  margin-left: 168rpx;
  margin-top: 10rpx;
}

.card {
  margin-top: 200rpx;
}

.card-gray {
  height: 300rpx;
  width: 85%;
  border-radius: 30rpx;
  background-color: #cccccc;
  box-shadow: 4px 4px 8px #cccccc;
  margin-left: 7%;
  position: relative;
}

.card-green {
  height: 300rpx;
  width: 85%;
  border-radius: 30rpx;
  background-color: #6bd64a;
  box-shadow: 4px 4px 8px #cccccc;
  margin-left: 7%;
  position: relative;
}

.card-expended {
  height: 400rpx;
  width: 85%;
  border-radius: 30rpx;
  background-color: #a6cc97;
  box-shadow: 4px 4px 8px #cccccc;
  margin-left: 7%;
  position: relative;
}

.text-gray {
  font-family: '宋体';
  display: inline-flex;
  color: rgb(255, 255, 255);
  font-size: medium;
  font-weight: 800;
  letter-spacing: 5rpx;
  margin-left: 90rpx;
  margin-top: 200rpx;
}

.text-expended {
  font-family: '宋体';
  display: inline-flex;
  color: rgb(255, 255, 255);
  font-size: medium;
  font-weight: 800;
  letter-spacing: 5rpx;
  margin-left: 90rpx;
  margin-top: 300rpx;
}

.button-down {
  display: inline-flex;
  height: 48rpx;
  width: 48rpx;
  margin-top: 200rpx;
  margin-left: 36%;
  position: absolute;
}

.button-expended {
  display: inline-flex;
  height: 48rpx;
  width: 48rpx;
  margin-top: 300rpx;
  margin-left: 36%;
  position: absolute;
}

.card-input {
  display: inline-flex;
  margin-left: 90rpx;
  margin-top: 70rpx;
  position: absolute;
  
  font-family: '宋体';
  color: rgba(54, 54, 54, 0.486);
  font-size: larger;
  font-weight: 800;
  letter-spacing: 5rpx;
}

.card-input-placeholder {
  font-family: '宋体';
  color: rgba(255, 255, 255, 0.644);
  font-size: large;
  font-weight: 800;
  letter-spacing: 5rpx;
}


.notification {
  margin: 100rpx;
}